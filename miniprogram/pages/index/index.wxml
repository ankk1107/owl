<!--index.wxml-->
<view class="container">
  <view class="main" >
    <view class="title font_title_1">信息查询</view>
    <view class="sub_title">
      欢迎来查你的信息，祝你暑假快乐~。
    </view>
    <view class="ability_container">
      <view class="ability_title">你将查到</view>
      <view class="ability_item" wx:for="{{ knowledgePoints }}" wx:for-item="point" wx:key="id">
        {{ point.title }}
      </view>
    </view>
    <view class='input_box'>
      <view class="input_label">你的ID:</view>
      <input class="s_number" bindinput="bindInput" value="{{sNumber}}" type="number" maxlength="12"></input>
      <view class="button" bind:tap="getMsg">查询</view>
    </view>
  </view>
</view>